@using T5.Common.Models;
@model TaskImage
@{
    ViewBag.Title = "Cloud Computing";
}
@if (Model == null)
{
    <h3>Failled to process the task.</h3>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <h3>Original Photo</h3>
            </div>
            <div class="row">
                <a href="@Model.OriginalURL" target="_blank"><img src="@Model.OriginalURL" class="img-thumbnail" /></a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <h3>Current Photo</h3>
            </div>
            <div class="row">
                <a href="@Model.CurrentURL" target="_blank"><img src="@Model.CurrentURL" class="img-thumbnail" /></a>
            </div>
        </div>
    </div>


    int i = 0;
    for (; i <= Model.Filters.Count - 2; i += 2)
    {
        <div class="row">
            @Html.Partial("ImgFilterPartial", Model.Filters[i])
            @Html.Partial("ImgFilterPartial", Model.Filters[i + 1])
        </div>
    }
    if (i != Model.Filters.Count)
    {
        <div class="row">
            @Html.Partial("ImgFilterPartial", Model.Filters[Model.Filters.Count - 1])
        </div>
    }
}







